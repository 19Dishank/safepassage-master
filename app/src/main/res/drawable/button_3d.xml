<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A5D6A7" /> <!-- Slightly darker shade for shadow -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Top Layer (Actual Button) -->
    <item android:top="4dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#B2FF59"
                android:endColor="#76FF03"
                android:angle="270" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
