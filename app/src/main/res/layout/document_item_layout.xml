<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/main"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:id="@+id/documentFileIcon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/green_outline_circle"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_document"
            app:tint="@color/green" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/documentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_semibold"
                android:text="Document Title"
                android:textColor="@color/main_alt"
                android:textSize="@dimen/_14sdp"
                tools:text="Important Document" />

            <TextView
                android:id="@+id/documentFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/lexend_regular"
                android:text="filename.pdf"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp"
                tools:text="document.pdf" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/documentFileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_regular"
                    android:text="1.2 MB"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp"
                    tools:text="1.2 MB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:fontFamily="@font/lexend_regular"
                    android:text="â€¢"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/documentCreatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_regular"
                    android:text="2024-01-15"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp"
                    tools:text="2024-01-15" />

            </LinearLayout>

            <TextView
                android:id="@+id/documentAiStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/ai_status_badge_background"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:textColor="@color/darkGreen"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/lexend_semibold"
                android:visibility="gone"
                tools:text="Expires in 30 days"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/documentAiInfoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/ai_status_badge_background"
                android:fontFamily="@font/lexend_semibold"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="View AI details"
                android:textColor="@color/darkGreen"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete document"
            android:src="@drawable/ic_delete"
            app:tint="@color/red" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
