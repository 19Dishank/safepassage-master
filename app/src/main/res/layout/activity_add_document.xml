<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AddDocumentActivity">

    

    <!-- Main Content Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingHorizontal="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_40sdp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    android:text="@string/add_new_document"
                    android:textColor="@color/main_alt"
                    android:textSize="@dimen/_21sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/lexend_regular"
                    android:text="@string/document_upload_description"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <!-- Document Title Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_27sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/main"
                app:cardCornerRadius="@dimen/_13sdp"
                app:cardElevation="4dp"
                app:strokeColor="@color/lightGreen"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_17sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_21sdp"
                            android:layout_height="@dimen/_21sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/ic_document"
                            app:tint="@color/darkGreen" />

                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexend_semibold"
                            android:text="@string/document_title"
                            android:textColor="@color/main_alt"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/titleTextBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:background="@drawable/edit_text_background"
                        android:fontFamily="@font/lexend_medium"
                        android:hint="@string/enter_document_title"
                        android:inputType="text"
                        android:padding="@dimen/_13sdp"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/titleErrorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:fontFamily="@font/lexend_regular"
                        android:text="@string/title_required"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- File Upload Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/uploadDocument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/main"
                app:cardCornerRadius="@dimen/_13sdp"
                app:cardElevation="4dp"
                app:strokeColor="@color/lightGreen"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_17sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_21sdp"
                            android:layout_height="@dimen/_21sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/ic_document"
                            app:tint="@color/darkGreen" />

                        <TextView
                            android:id="@+id/documentText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexend_semibold"
                            android:text="@string/select_document_file"
                            android:textColor="@color/main_alt"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                    <!-- File Selection Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonUpload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:backgroundTint="@color/lightGreen"
                        android:fontFamily="@font/lexend_semibold"
                        android:paddingVertical="@dimen/_13sdp"
                        android:text="@string/choose_file"
                        android:textColor="@color/darkGreen"
                        android:textSize="@dimen/_14sdp"
                        app:cornerRadius="@dimen/_10sdp"
                        app:icon="@drawable/ic_document"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/_6sdp"
                        app:iconTint="@color/darkGreen"
                        app:strokeColor="@color/darkGreen"
                        app:strokeWidth="1dp" />

                    <!-- Selected File Info -->
                    <LinearLayout
                        android:id="@+id/fileInfoContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:background="@drawable/file_info_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_13sdp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="@color/brightGreen" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/selectedFileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend_semibold"
                                android:textColor="@color/main_alt"
                                android:textSize="@dimen/_12sdp"
                                tools:text="document.pdf" />

                            <TextView
                                android:id="@+id/selectedFileSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:fontFamily="@font/lexend_regular"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_10sdp"
                                tools:text="2.5 MB" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/uploadErrorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:fontFamily="@font/lexend_regular"
                        android:text="@string/please_select_file"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Upload Button -->
                        <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonUnlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_37sdp"
                android:backgroundTint="@color/green"
                android:enabled="false"
                android:fontFamily="@font/lexend_bold"
                android:paddingVertical="@dimen/_15sdp"
                android:text="@string/upload_document"
                android:textColor="@color/main_alt"
                android:textSize="@dimen/_16sdp"
                app:cornerRadius="@dimen/_13sdp"
                app:elevation="8dp"
                app:icon="@drawable/ic_document"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/_10sdp"
                app:iconTint="@color/main_alt" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>