<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigations"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dhruvbuildz.safepassageapp.UI.Home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_passMonitorFragment"
            app:destination="@id/passMonitorFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.dhruvbuildz.safepassageapp.UI.Home.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_addFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_addFragment_to_passMonitorFragment"
            app:destination="@id/passMonitorFragment" />
    </fragment>
    <fragment
        android:id="@+id/passMonitorFragment"
        android:name="com.dhruvbuildz.safepassageapp.UI.Home.PassMonitorFragment"
        android:label="fragment_pass_monitor"
        tools:layout="@layout/fragment_pass_monitor" >
        <action
            android:id="@+id/action_passMonitorFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_passMonitorFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.dhruvbuildz.safepassageapp.UI.Home.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_settingFragment_to_passMonitorFragment"
            app:destination="@id/passMonitorFragment" />
    </fragment>
</navigation>